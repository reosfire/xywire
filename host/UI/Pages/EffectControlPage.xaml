<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI.Pages.EffectControlPage"
             Title="Effect Control">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="20">
        
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <Label
                Text="LED Effect Control"
                FontSize="24"
                FontAttributes="Bold" />
            <Label
                x:Name="StatusLabel"
                Text="No effect running"
                FontSize="14"
                TextColor="Gray" />
        </VerticalStackLayout>

        <Frame Grid.Row="1" 
               Padding="15" 
               BorderColor="LightGray"
               CornerRadius="8"
               Margin="0,0,0,20">
            <VerticalStackLayout Spacing="10">
                <Label
                    Text="Brightness"
                    FontSize="16"
                    FontAttributes="Bold" />
                <Grid ColumnDefinitions="*,Auto">
                    <Slider
                        Grid.Column="0"
                        x:Name="BrightnessSlider"
                        Minimum="0"
                        Maximum="255"
                        Value="100"
                        ValueChanged="OnBrightnessChanged" />
                    <Label
                        Grid.Column="1"
                        x:Name="BrightnessLabel"
                        Text="100"
                        FontSize="16"
                        VerticalOptions="Center"
                        Margin="10,0,0,0"
                        WidthRequest="40" />
                </Grid>
            </VerticalStackLayout>
        </Frame>

        <ScrollView Grid.Row="2">
            <VerticalStackLayout Spacing="10">
                <Label
                    Text="Select Effect"
                    FontSize="18"
                    FontAttributes="Bold"
                    Margin="0,0,0,10" />
                
                <CollectionView
                    x:Name="EffectsCollectionView"
                    SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,5" 
                                   Padding="15"
                                   BorderColor="LightGray"
                                   CornerRadius="8">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnEffectSelected" />
                                </Frame.GestureRecognizers>
                                <Label Text="{Binding Name}" 
                                       FontSize="16" />
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <Button
            Grid.Row="3"
            Text="Stop Effect"
            Clicked="OnStopEffectClicked"
            HorizontalOptions="Fill"
            BackgroundColor="Red"
            TextColor="White"
            Margin="0,20,0,0" />

    </Grid>

</ContentPage>
