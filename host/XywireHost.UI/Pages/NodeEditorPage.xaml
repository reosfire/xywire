<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XywireHost.UI.Controls"
             x:Class="XywireHost.UI.Pages.NodeEditorPage"
             Title="Node Editor">

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,Auto" Padding="16" RowSpacing="12" ColumnSpacing="12">
        <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="8">
            <Label Text="Node Graph"
                   FontSize="20"
                   FontAttributes="Bold" />
            <HorizontalStackLayout Spacing="8">
                <Picker x:Name="NodePicker"
                        Title="Add node"
                        HorizontalOptions="FillAndExpand" />
                <Button Text="Add"
                        Clicked="OnAddNodeClicked" />
                <Button Text="Remove"
                        Clicked="OnRemoveNodeClicked" />
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="8">
                <Button Text="Fit View"
                        Clicked="OnFitViewClicked" />
                <Button Text="Compile"
                        Clicked="OnCompileGraphClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <Border Grid.Row="1" Grid.Column="0"
                Stroke="#333333"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 8"
                Padding="0">
            <controls:NodesCanvasView x:Name="NodesView"
                                      SelectionChanged="OnNodeSelectionChanged" />
        </Border>

        <!-- Embedded Inputs Properties Panel -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                Stroke="#333333"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 8"
                Padding="12"
                WidthRequest="250"
                IsVisible="{Binding Source={x:Reference EmbeddedInputsPanel}, Path=IsVisible}">
            <VerticalStackLayout x:Name="EmbeddedInputsPanel" Spacing="8" IsVisible="False">
                <Label Text="Properties" FontSize="16" FontAttributes="Bold" />
                <Label x:Name="SelectedNodeLabel" FontSize="14" TextColor="Gray" />
                <VerticalStackLayout x:Name="EmbeddedInputsContainer" Spacing="8" />
            </VerticalStackLayout>
        </Border>
    </Grid>

</ContentPage>